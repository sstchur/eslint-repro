{
    "compilerOptions": {
      "target": "es2018",
      "module": "esnext",
      "jsx": "react",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "noEmitOnError": true,
      "moduleResolution": "node",
      "strict": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "importHelpers": true
    },
    "include": ["./**/*.js"]
  }
  